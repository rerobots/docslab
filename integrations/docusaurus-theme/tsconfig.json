{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "references": [{"path": "./tsconfig.client.json"}],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2020"
  },
  "include": ["src"],
  "exclude": [
    "src/theme"
  ]
}
